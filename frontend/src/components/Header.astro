<!-- JavaScript: Mobile Menu Toggle -->
<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

  // Profile Dropdown Toggle (Desktop)
  const profileImgDesktop = document.getElementById("profile-img-desktop");
  const profileDropdownDesktop = document.getElementById(
    "profile-dropdown-desktop"
  );

  profileImgDesktop?.addEventListener("click", () => {
    profileDropdownDesktop?.classList.toggle("hidden");
  });

  // Profile Dropdown Toggle (Mobile)
  const profileImgMobile = document.getElementById("profile-img-mobile");
  const profileDropdownMobile = document.getElementById(
    "profile-dropdown-mobile"
  );

  profileImgMobile?.addEventListener("click", () => {
    profileDropdownMobile?.classList.toggle("hidden");
  });

  // Fetch user session and update UI
  async function fetchUser() {
    try {
      const response = await fetch("https://www.witeso.com/api/user", {
        credentials: "include",
      });
      const user = await response.json();

      // Desktop Section
      const userSectionDesktop = document.getElementById("user-section-desktop");
      const mobile_user_full_name = document.getElementById("mobile_user_full_name");
      const mobile_user_email = document.getElementById("mobile_user_email");
      const view_profile_mobile1 = document.getElementById("view_profile_mobile1");
      const view_profile_mobile2 = document.getElementById("view_profile_mobile2");
      const edit_profile_mobile = document.getElementById("edit_profile_mobile");
      const witeso_card_profile_mobile = document.getElementById("witeso_card_profile_mobile");
      const mobile_view_profile_pic = document.getElementById("mobile_view_profile_pic");
      
      const view_profile_desktop = document.getElementById("view_profile_desktop");
      const card_profile_pic = document.getElementById("card_profile_pic");
      const desktop_card_full_name = document.getElementById("desktop_card_full_name");
      const desktop_card_email = document.getElementById("desktop_card_email");
      const card_profile_view = document.getElementById("card_profile_view");
      const card_edit_profile = document.getElementById("card_edit_profile");
      const card_profile_view_witeso_card = document.getElementById("card_profile_view_witeso_card");

      // Mobile Section
      const userSectionMobile = document.getElementById("user-section-mobile");

      if (user.logged_in) {
        // Update Mobile View
        mobile_user_full_name.textContent = user.name;
        mobile_user_email.textContent = user.email;
        view_profile_mobile1.href = `/profile/${user.username}`;
        view_profile_mobile2.href = `/profile/${user.username}`;
        edit_profile_mobile.href = `/profile/${user.username}/edit`;
        witeso_card_profile_mobile.href = `/profile/${user.username}/card`;
        mobile_view_profile_pic.src = user.picture.replace('=s96-c', '=s0');

        // Update Desktop View
        view_profile_desktop.href = `/profile/${user.username}`;
        card_profile_view.href = `/profile/${user.username}`;
        card_edit_profile.href = `/profile/${user.username}/edit`;
        card_profile_view_witeso_card.href = `/profile/${user.username}/card`;
        desktop_card_full_name.textContent = user.name;
        desktop_card_email.textContent = user.email;
        var profileImgDesktop = document.getElementById("profile-img-desktop");
        profileImgDesktop.src = user.picture.replace('=s96-c', '=s0');
        card_profile_pic.src = user.picture.replace('=s96-c', '=s0');
        userSectionDesktop?.classList.remove("hidden");

        const profileImgMobile = document.getElementById("profile-img-mobile");
        const profileDropdownMobile = document.getElementById(
          "profile-dropdown-mobile"
        );

        profileImgMobile?.addEventListener("click", () => {
          profileDropdownMobile?.classList.toggle("hidden");
        });

        userSectionDesktop.style.display = "block";
        userSectionMobile.style.display = "block";
      } else {
        userSectionDesktop.innerHTML = `
          <div class="hidden md:flex items-center space-x-4">
            <a href="https://www.witeso.com/login" class="text-white bg-green-500 px-4 py-2 rounded-lg hover:bg-green-600 transition">
              Login
            </a>
          </div>
        `;

        // Update Mobile View
        userSectionMobile.innerHTML = `
          <div class="flex flex-col items-center mt-4">
            <a href="https://www.witeso.com/login" class="block mt-2 text-white bg-green-500 px-4 py-2 rounded-lg hover:bg-green-600 transition w-full">
              Login
            </a>
          </div>
        `;
        // Ensure login button is displayed if user is not logged in
        userSectionDesktop.classList.remove("hidden");
        userSectionDesktop.style.display = "block";
        userSectionMobile.style.display = "block";
      }
    } catch (error) {
      console.error("Error fetching user data:", error);
    }
  }

  // Call function on page load
  fetchUser();
</script>