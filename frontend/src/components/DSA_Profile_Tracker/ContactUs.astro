---
// Define the props interface
interface Props {
  title: string;
  subtitle: string;
  contactInfo: {
    email: string;
    website: string;
    location: string;
  };
  socialMedia: {
    github: string;
    linkedin: string;
    twitter: string;
    leetcode: string;
  };
}

// Destructure the props
const { title, subtitle, contactInfo, socialMedia } = Astro.props;
---

<section id="contact-info" class="bg-gray-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Title -->
    <div class="mb-10">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-2">{title}</h2>
      <p class="text-gray-400">{subtitle}</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Contact Form -->
      <div class="lg:col-span-2 bg-gray-800 rounded-xl p-6 border border-gray-700">
        <h3 class="text-xl font-bold text-white mb-6 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
          </svg>
          Send a Message
        </h3>

        <form class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-gray-400 mb-2 text-sm">Your Name</label>
              <input type="text" id="name" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-300" placeholder="John Doe" />
            </div>
            <div>
              <label for="email" class="block text-gray-400 mb-2 text-sm">Your Email</label>
              <input type="email" id="email" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-300" placeholder="john@example.com" />
            </div>
          </div>

          <div>
            <label for="subject" class="block text-gray-400 mb-2 text-sm">Subject</label>
            <input type="text" id="subject" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-300" placeholder="Job Opportunity" />
          </div>

          <div>
            <label for="message" class="block text-gray-400 mb-2 text-sm">Message</label>
            <textarea id="message" rows="5" class="w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition duration-300" placeholder="Your message here..."></textarea>
          </div>

          <div class="flex items-center">
            <input type="checkbox" id="consent" class="w-4 h-4 bg-gray-700 border border-gray-600 rounded focus:ring-green-500 text-green-500" />
            <label for="consent" class="ml-2 text-gray-400 text-sm">I agree to the privacy policy and terms of service.</label>
          </div>

          <button type="submit" class="w-full md:w-auto bg-green-600 hover:bg-green-700 text-white rounded-lg px-6 py-3 font-medium flex items-center justify-center transition duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Info & Social Media -->
      <div class="lg:col-span-1 flex flex-col gap-6">
        <!-- Contact Details -->
        <div class="bg-gray-800 rounded-xl p-6 border border-gray-700">
          <h3 class="text-xl font-bold text-white mb-6 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Contact Info
          </h3>

          <div class="space-y-4">
            <div class="flex items-start">
              <div class="w-10 h-10 bg-green-900/30 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-white font-medium">Email</h4>
                <a href={`mailto:${contactInfo.email}`} class="text-gray-400 hover:text-green-500 transition duration-300">{contactInfo.email}</a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-10 h-10 bg-green-900/30 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-white font-medium">Website</h4>
                <a href={contactInfo.website} target="_blank" class="text-gray-400 hover:text-green-500 transition duration-300">{contactInfo.website}</a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-10 h-10 bg-green-900/30 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="text-white font-medium">Location</h4>
                <p class="text-gray-400">{contactInfo.location}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Media -->
        <div id="follow_me" class="bg-gray-800 rounded-xl p-6 border border-gray-700">
          <h3 class="text-xl font-bold text-white mb-6 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
            Follow Me
          </h3>

          <div class="grid grid-cols-2 gap-4">
            <a href={socialMedia.github} target="_blank" class="flex items-center p-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
              </svg>
              <span class="text-white">GitHub</span>
            </a>

            <a href={socialMedia.linkedin} target="_blank" class="flex items-center p-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
              </svg>
              <span class="text-white">LinkedIn</span>
            </a>

            <a href={socialMedia.twitter} target="_blank" class="flex items-center p-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path>
              </svg>
              <span class="text-white">Twitter</span>
            </a>

            <a href={socialMedia.leetcode} target="_blank" class="flex items-center p-3 bg-gray-700 rounded-lg hover:bg-gray-600 transition duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M13.483 0a1.374 1.374 0 0 0-.961.438L7.116 6.226l-3.854 4.126a5.266 5.266 0 0 0-1.209 2.104 5.35 5.35 0 0 0-.125.513 5.527 5.527 0 0 0 .062 2.362 5.83 5.83 0 0 0 .349 1.017 5.938 5.938 0 0 0 1.271 1.818l4.277 4.193.039.038c2.248 2.165 5.852 2.133 8.063-.074l2.396-2.392c.54-.54.54-1.414.003-1.955a1.378 1.378 0 0 0-1.951-.003l-2.396 2.392a3.021 3.021 0 0 1-4.205.038l-.02-.019-4.276-4.193c-.652-.64-.972-1.469-.948-2.263a2.68 2.68 0 0 1 .066-.523 2.545 2.545 0 0 1 .619-1.164L9.13 8.114c1.058-1.134 3.204-1.27 4.43-.278l3.501 2.831c.593.48 1.461.387 1.94-.207a1.384 1.384 0 0 0-.207-1.943l-3.5-2.831c-.8-.647-1.766-1.045-2.774-1.202l2.015-2.158A1.384 1.384 0 0 0 13.483 0zm-2.866 12.815a1.38 1.38 0 0 0-1.38 1.382 1.38 1.38 0 0 0 1.38 1.382H20.79a1.38 1.38 0 0 0 1.38-1.382 1.38 1.38 0 0 0-1.38-1.382z"></path>
              </svg>
              <span class="text-white">LeetCode</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>