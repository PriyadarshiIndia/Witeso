---
---

<section id="earn_certificate" class="min-h-[70vh] bg-neutral-900 text-white py-16 px-4 relative overflow-hidden">
    <!-- Abstract background pattern -->
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 left-0 w-96 h-96 bg-green-500 rounded-full filter blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-500 rounded-full filter blur-3xl translate-x-1/2 translate-y-1/2"></div>
    </div>
    
    <div class="container mx-auto max-w-6xl relative z-10">
      <div class="flex flex-col items-center text-center mb-12 animate__animated animate__fadeIn">
        <h2 class="text-3xl md:text-4xl lg:text-4xl font-bold mb-6 leading-tight">
          Professional <span class="text-green-500">Certificates</span> for Your Achievement
        </h2>
        <p class="text-lg md:text-xl text-gray-300 max-w-3xl mb-10">
          Showcase your skills and accomplishments with our verifiable certificate that stand out and get recognized by employers worldwide.
        </p>
      </div>
      
      <!-- Certificate preview -->
      <div class="relative max-w-4xl mx-auto animate__animated animate__fadeInUp">
        <div class="bg-neutral-800 p-6 rounded-lg border-2 border-green-500 shadow-2xl shadow-green-500/10 transform hover:scale-[1.02] transition-transform duration-300 no-select">
          <!-- Decorative elements -->
        <div class="absolute top-0 right-0 h-20 w-20 bg-green-500 opacity-10 rounded-bl-full"></div>
        <div class="absolute bottom-0 left-0 h-20 w-20 bg-blue-500 opacity-10 rounded-tr-full"></div>
        
        <div class="text-center mb-6">
          <h3 class="text-2xl md:text-3xl font-bold text-green-400">CERTIFICATE OF COMPLETION</h3>
          <p class="text-gray-400 text-sm md:text-base mt-1">Witeso - DSA Mastery Program</p>
        </div>
        
        <div class="text-center mb-8">
          <p class="text-gray-300">Proudly awarded to</p>
          <h4 class="text-2xl md:text-3xl font-bold my-3 text-white">John Doe</h4>
          <p class="text-gray-300">for successfully completing</p>
          <h5 class="text-xl md:text-2xl font-bold my-3 text-white">Data Structures & Algorithms Course</h5>
          <p class="text-sm md:text-base text-gray-400 mt-2">Demonstrated exceptional problem-solving skills</p>
        </div>
        
        <div class="flex justify-between items-end mt-8 md:mt-12">
          <div class="text-center">
            <p class="text-xs md:text-sm mt-1 text-gray-400">1 Jan 2024</p>
            <div class="border-b-2 border-green-500 pb-1 w-32 md:w-40"></div>
          </div>
          <div class="text-center">
            <div class="h-20 w-20 md:h-22 md:w-22 mx-auto rounded border border-green-500 bg-gradient-to-br from-green-500 to-blue-500 opacity-80 flex items-center justify-center">
              <img src=`https://api.qrserver.com/v1/create-qr-code/?data=https://www.witeso.com/certificate/WITESO-001&size=150x150` alt="Witeso Certificate Verification QR Code" class="h-16 w-16 md:h-20 md:w-20 mx-auto" />
            </div>
          </div>
          <div class="text-center">
            <p class="text-xs md:text-sm mt-1 text-gray-400">Witeso's Certified</p>
            <div class="border-b-2 border-green-500 pb-1 w-32 md:w-40"></div>
          </div>
        </div>
        
        <div class="text-center mt-6">
          <p class="text-xs text-gray-500">Certificate ID: WITESO-001</p>
        </div>
        </div>
        
        <!-- Decorative elements -->
        <div class="absolute -top-6 -left-6 w-16 h-16 bg-green-500 rounded-full opacity-70 blur-lg"></div>
        <div class="absolute -bottom-4 -right-4 w-20 h-20 bg-blue-500 rounded-full opacity-70 blur-lg"></div>
      </div>
    </div>
  </section>

  <style>
    .no-select {
      user-select: none;
      pointer-events: none;
    }
  </style>